  <body>
      <%- include('header', {title: '评论详情'}) %>
      <div class='comment_list'>
        <button onclick="history.back()">返回</button>
        <table>
          <colgroup>
            <col width='10%'>
            <col width='40%'>
            <col />
          </colgroup>
          <tr>
            <th>序号</th>
            <th>标题</th>
            <th>内容</th>
          </tr>
          <% for (var i = 0; i < data.length; i++) { %>
            <tr>
              <td><%- i+1 %></td>
              <td><%- data[i].title %></td>
              <td><%- data[i].content %></td>
            </tr>
            <% } %>
        </table>
      </div>
  </body>
